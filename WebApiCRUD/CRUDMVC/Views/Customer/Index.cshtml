@model IEnumerable<CRUDMVC.Models.CustomerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("AddCustomer", "Customer")" id="Add" class="btn btn-default">Create New &nbsp;<i class="glyphicon glyphicon-plus"></i></a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>
                Sl. No
            </th>
            <th>
                Name
            </th>
            <th>
                Mobile
            </th>
            <th>
                Email
            </th>
            <th>
                Address
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ int s = 0;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{ s++;}
                    @s
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerMobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerAddress)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
